@using WebApplication.Web.Models.Account;
@model ConversationModel;

@{
    ViewData["Title"] = "Conversation";

}

<div id="chatbox">
    <h2>Conversation</h2>
    @foreach (Message message in Model.Messages)
    {
        @if (message.RecieiverId == Model.CurrentUser.Id)
        {
            <div class="message">
                <p>@Model.Receiver: @message.Text</p>
            </div>
        }
        else
        {
            <div class="message">
                <p>@Model.Sender: @message.Text</p>
            </div>
        }

    }

</div>
<style>


    body {
        width: 100%;
        height: auto;
        background: url(../images/sheetmusic.jpg) no-repeat center center;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        color: #8a6d3b;
    }

    .Message {
        background-color: brown;
        border-style: solid;
        border-width: 5px;
        border-color: sienna;
        border-radius: 5px;
        padding: 5px;
        margin: 15px;
        color: khaki;
    }

    .Details {
        font: caption;
        padding: 10px;
    }

    #chatbox {
        background-color: navajowhite;
    }
</style>