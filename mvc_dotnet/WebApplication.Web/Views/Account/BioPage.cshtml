@model User
@{
    ViewData["Title"] = "My Profile";

}

<img class="musicimage" src="~/images/sheetmusic.jpg" />  

<div class="profileinput">
 <h2>@Model.Username</h2>
 <div class="thumb1">

 </div>
 <img class="fit-square" src="@Model.ProfilePic">
 <form method="post" action="/Account/AddPic" enctype="multipart/form-data">
    <label>UPDATE PROFILE PICTURE</label>
    <input type="file" name="pic" /></br>
    <input style="background-color:darkorange" type="submit" value="Go" />
 </form>

 <hr />
 <ul>
    @foreach(Composer composer in Model.ListOfComposers)
    {
        <li>@composer.Name</li>
    }
 </ul>


 <form method="post" action="/Account/AddComposer">
    <label>ADD A FAVORITE COMPOSER</label><br />
    <input type="text" name="composer"><br />
    <input style="background-color:darkorange"type="submit" value="Go" /> 
     <hr />
 </form>

    <h5 style="font-weight:bold">BLOCKED USERS:</h5>
    <ul>
        @foreach (KeyValuePair<int, string> kvp in Model.BlockedUsersDictionary)
        {
            <li>@kvp.Value</li>
            <form method="post" action="/Account/UnBlockUser">
                <input type="hidden" value="@kvp.Key" name="unBlockedUserId"><br />
                <input style="background-color:darkorange" type="submit" value="Unblock" />
                <hr />
            </form>
        }
    </ul>
    
 <p>
    @if (Model.IsPublic)
    {
        <span>Your Profile is Public</span>
    }
    else
    {
        <span>Your Profile is Private</span>
    }
 </p>
 <form method="post" action="/Account/ChangePrivacy">
    <label>UPDATE PRIVACY</label><br />
    @if (Model.IsPublic)
    {
        <input readonly="readonly" type="hidden" value="0" name="isPublic"/>
        <input style="background-color:darkorange"type="submit" value="Go Private" />
    }
    else
    {
        <input readonly="readonly" type="hidden" value="1" name="isPublic"/>
        <input style="background-color:darkorange" type="submit" value="Go Public" />
    }
 </form> 
      <hr />

 
 <p></p>
 <p class="self-description">@Model.SelfDescription</p><br />
 <form method="post" action="/Account/AddDescription">
    <label>UPDATE ABOUT YOURSELF</label><br />
    <textarea rows="4" cols="50" name="description" placeholder="@Model.SelfDescription"></textarea><br />
    <input style="background-color:darkorange"type="submit" value="Go" />
 </form> 
</div>



<style> 
    .musicimage{
        width:100%;
    }
    .profileinput {
        position: absolute;
        margin-top: -125%;
        color: black;
        margin-left: 27%;
        border-style: groove;
        border-color: darkorange;
        border-width: 10px;
        background-color: burlywood;
    }
    .fit-square {
        object-fit: cover;
        width: 230px;
        height: 230px;
        border-style:groove;
        border-color:saddlebrown;
        border-width: 5px;
        background-color:burlywood;
    }

    .self-description {
        white-space: pre-line;
    }
   hr{
       border-color:saddlebrown; 
       border-width:5px;
   } 
   
</style>
